<% if @creature.special_abilities.length > 0 %>
	<h2>Special Abilities</h2>
	<% @creature.special_abilities.each do |special_ability| %>
		<%= render partial: "creatures/special_abilities/show", locals: { special_ability: special_ability }, layout: false %>
	<% end %>
<% end %>

<% if @creature.actions.length > 0 %>
	<h2>Actions</h2>
	<% @creature.actions.each do |action| %>
		<%= render partial: "creatures/actions/show", locals: { action: action }, layout: false %>
	<% end %>
<% end %>

<% if @creature.legendary_actions.length > 0 %>
	<h2>Legendary Actions</h2>
	<% @creature.legendary_actions.each do |legendary_action| %>
		<%= render partial: "creatures/legendary_actions/show", locals: { legendary_action: legendary_action }, layout: false %>
	<% end %>
<% end %>

<% unless @creature.id == 1 %>
	<%= link_to 'Previous Creature', creature_path(@creature.id - 1) %>
<% end %>
<%= link_to 'Home', creatures_path %>
<% unless @creature.id == Creature.all.length %>
	<%= link_to 'Next Creature', creature_path(@creature.id + 1) %>
<% end %>